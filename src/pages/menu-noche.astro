---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import logo from "../assets/logo2.png";
import Entradas from "../components/Entradas.astro";
import Pizzas from "../components/Pizzas.astro";
import Cokctails from "../components/Cokctails.astro";


import comida from "../comidas.json";
import BebidasConAlcohol from "../components/BebidasConAlcohol.astro";

const menuItems = comida.pizzas;
const menuItems2 = comida.bebidasSinAlcohol;
const menuItems3 = comida.lata;
const menuItems4 = comida.cocktails;
---

<Layout>
  <div>
    <div class="">
      <div
        class="w-[90%] text-white font-bold bg-[#120c0c] justify-self-center rounded-lg my-10 h-[100%]"
      >
      <a href="/zombra-menu">

        <Image
          transition:name="menu-dia"

          class="m-auto w-[50%]"
          src={logo}
          alt=""
          srcset=""
        />
      </a>

        <h3 class="p-5 mb-5">PIZZAS</h3>
        {
          menuItems.map((item) => (
            <Pizzas
              titulo={item.nombre}
              contenido={item.descripcion}
              precio={item.precio}
            />
          ))
        }

        <h3 class="p-5 mb-5">BEBIDAS SIN ALCOHOL</h3>
        {
          menuItems2.map((item) => (
            <Entradas titulo={item.nombre} precio={item.precio} />
          ))
        }

        <h3 class="p-5 mb-5">BEBIDAS CON ALCOHOL</h3>

        <div class="flex">
          <h3 class="text-[15px] w-[55%] p-5 font-bold">Lata:</h3>
          <div class="w-full">
            {
              menuItems3.map((item) => (
                <BebidasConAlcohol titulo={item.nombre} precio={item.precio} />
              ))
            }
          </div>
        </div>

        <div class="flex justify-around">
          <h3 class="text-[15px] p-5 font-bold w-[55%] ">Botella 1,5 lt:</h3>
          <div class="w-full">
            {
              menuItems3.map((item) => (
                <BebidasConAlcohol titulo={item.nombre} precio={item.precio} />
              ))
            }
          </div>
        </div>

        <h3 class="p-5 mb-5">COCKTAILS DE LA CASA</h3>

        <Entradas titulo="Promo InaguraciÃ³n" precio="6.500" />
        {
          menuItems4.map((item) => (
            <Cokctails titulo={item.nombre} contenido={item.descripcion} />
          ))
        }
        

        <div class="flex justify-center text-center py-10">
          <span class="me-5"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              style="fill: #b57869;transform: ;msFilter:;"
              ><path
                d="M20.947 8.305a6.53 6.53 0 0 0-.419-2.216 4.61 4.61 0 0 0-2.633-2.633 6.606 6.606 0 0 0-2.186-.42c-.962-.043-1.267-.055-3.709-.055s-2.755 0-3.71.055a6.606 6.606 0 0 0-2.185.42 4.607 4.607 0 0 0-2.633 2.633 6.554 6.554 0 0 0-.419 2.185c-.043.963-.056 1.268-.056 3.71s0 2.754.056 3.71c.015.748.156 1.486.419 2.187a4.61 4.61 0 0 0 2.634 2.632 6.584 6.584 0 0 0 2.185.45c.963.043 1.268.056 3.71.056s2.755 0 3.71-.056a6.59 6.59 0 0 0 2.186-.419 4.615 4.615 0 0 0 2.633-2.633c.263-.7.404-1.438.419-2.187.043-.962.056-1.267.056-3.71-.002-2.442-.002-2.752-.058-3.709zm-8.953 8.297c-2.554 0-4.623-2.069-4.623-4.623s2.069-4.623 4.623-4.623a4.623 4.623 0 0 1 0 9.246zm4.807-8.339a1.077 1.077 0 0 1-1.078-1.078 1.077 1.077 0 1 1 2.155 0c0 .596-.482 1.078-1.077 1.078z"
              ></path><circle cx="11.994" cy="11.979" r="3.003"></circle></svg
            ></span
          >
          <a
            href="https://www.instagram.com/zombracocina/"
            target="_blank"
            class="text-[#b57869]">@zombracocina</a
          >
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  body {
    background-image: url(../assets/fondo-os3.avif);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
  }
</style>
