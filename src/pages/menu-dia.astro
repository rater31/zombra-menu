---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import logo from "../assets/logo2.png";

import Entradas from "../components/Entradas.astro";
import GuaryBebidas from "../components/GuarnicionyBebidas.astro";

import comidas from "../comidas.json";

const menuItems = comidas.entradas;
const menuItems2 = comidas.principales;
const menuItems3 = comidas.milanesas;
const menuItems4 = comidas.guarnicion;
const menuItems5 = comidas.bebidas;
---

<Layout>
  <div class="">
    <div
      class="w-[90%] text-white font-bold bg-[#1e2e2e] justify-self-center rounded-lg my-10 h-[100%]"
    >
    <a href="/zombra-menu">

      <Image
        transition:name="menu-dia"
        transition:name="menu-noche"
        class="m-auto w-[50%]"
        src={logo}
        alt=""
        srcset=""
      />
      <h3 class="p-5 mb-5">ENTRADAS</h3>
      {
        menuItems.map((item) => (
          <Entradas titulo={item.nombre} precio={item.precio} />
        ))
      }

      <h3 class="p-5 mt-28">PRINCIPALES</h3>

      {
        menuItems2.map((item) => (
          <Entradas titulo={item.nombre} precio={item.precio} />
        ))
      }

      <h3 class="text-center my-10 text-[#4b6964]">
        (sabores: citricos, tradicional, chimichurri)
      </h3>

      <h3 class="p-5 mt-28">MILANESAS</h3>

      {
        menuItems3.map((item) => (
          <Entradas titulo={item.nombre} precio={item.precio} />
        ))
      }

      <h3 class="p-5 mt-28">GUARNICIONES</h3>

      {menuItems4.map((item) => <GuaryBebidas titulo={item.nombre} />)}

      <h3 class="p-5 mt-28">BEBIDAS</h3>

      {menuItems5.map((item) => <GuaryBebidas titulo={item.nombre} />)}
      <div class="flex justify-center text-center py-10">
        <span class="me-5"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            style="fill: #4b6964;transform: ;msFilter:;"
            ><path
              d="M20.947 8.305a6.53 6.53 0 0 0-.419-2.216 4.61 4.61 0 0 0-2.633-2.633 6.606 6.606 0 0 0-2.186-.42c-.962-.043-1.267-.055-3.709-.055s-2.755 0-3.71.055a6.606 6.606 0 0 0-2.185.42 4.607 4.607 0 0 0-2.633 2.633 6.554 6.554 0 0 0-.419 2.185c-.043.963-.056 1.268-.056 3.71s0 2.754.056 3.71c.015.748.156 1.486.419 2.187a4.61 4.61 0 0 0 2.634 2.632 6.584 6.584 0 0 0 2.185.45c.963.043 1.268.056 3.71.056s2.755 0 3.71-.056a6.59 6.59 0 0 0 2.186-.419 4.615 4.615 0 0 0 2.633-2.633c.263-.7.404-1.438.419-2.187.043-.962.056-1.267.056-3.71-.002-2.442-.002-2.752-.058-3.709zm-8.953 8.297c-2.554 0-4.623-2.069-4.623-4.623s2.069-4.623 4.623-4.623a4.623 4.623 0 0 1 0 9.246zm4.807-8.339a1.077 1.077 0 0 1-1.078-1.078 1.077 1.077 0 1 1 2.155 0c0 .596-.482 1.078-1.077 1.078z"
            ></path><circle cx="11.994" cy="11.979" r="3.003"></circle></svg
          ></span
        >
        <a
          href="https://www.instagram.com/zombracocina/"
          target="_blank"
          class="text-[#4b6964]">@zombracocina</a
        >
      </div>
    </div>
  </div>
</Layout>
<style>
  body {
    background-image: url("../assets/fondo de hojas  bonitas sin huecos.webp");
    background-size: cover;
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>
